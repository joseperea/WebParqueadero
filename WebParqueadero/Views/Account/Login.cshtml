@using WebParqueadero.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="container-fluid my-5">
    <div class="row">
        <div class="text-center col-4 col-sm-4 col-md-4 offset-4 offset-sm-4 offset-md-4">
            <img class="mb-2" src="~/Imagenes/parking-solid.svg" alt="" width="100" height="100">
            @*<h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>
                <p>Build form controls with floating labels via the <code>:placeholder-shown</code> pseudo-element. <a href="https://caniuse.com/#feat=css-placeholder-shown">Works in latest Chrome, Safari, and Firefox.</a></p>*@
        </div>
        <div class="col-4 col-sm-4 col-md-4 offset-4 offset-sm-4 offset-md-4">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Partial("_MensajeErrorViewParial")
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                        <div class="input-group col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend">
                                    <i class="fas fa-envelope"></i>
                                </span>
                            </div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-12 col-sm-12 col-md-12 col-lg-12", placeholder = "Correo" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger col-12 col-sm-12 col-md-12 col-lg-12" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="input-group col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroupPrepend">
                                    <i class="fas fa-key"></i>
                                </span>
                            </div>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-12 col-sm-12 col-md-12 col-lg-12" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger col-12 col-sm-12 col-md-12 col-lg-12", placeholder = "Contraseña" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="col-12 col-sm-12 col-md-12 col-lg-12 btn btn-outline-success btn-lg btn-block" style="margin: 0 auto" id="Idbutton" onclick="InicioSesionCargando()">
                            <i class="fas fa-sign-in-alt"></i>
                            Iniciar Sesión
                        </button>
                    </div>
                    <div class="form-group">
                        @Html.ActionLink("Registrar Paqueadero", "Create", "Parqueadero")
                    </div>
                    @*//Enable this once you have account confirmation enabled for password reset functionality
                    <div class="form-group">
                        @Html.ActionLink("Recuperar Contraseña?", "ForgotPassword")
                    </div>*@
                }
            </section>
        </div>
        @*<div class="col-md-4">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>*@
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    var MensajeError = `@Html.ValidationSummary(true,"", new { @class = "text-danger" })`;
    if (MensajeError != "") {
        $("#idShowMensajeError").addClass("show");
        $("#IdMensajeError").html(MensajeError);
    }
</script>
}
