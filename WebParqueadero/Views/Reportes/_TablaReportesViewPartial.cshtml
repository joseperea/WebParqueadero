@model IEnumerable<WebParqueadero.ModelViews.Reportes>

<div class="table-responsive table-responsive-sm table-responsive-md table-responsive-lg">
    <table class="table table-hover table-secondary">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Contador)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TipoVehiculo)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Placa)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FechaIngreso)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.FechaSalida)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoraIngreso)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.HoraSalida)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.TiempoTranscurrido)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.ValorTotal)
                </th>
                @if (Model.FirstOrDefault().ModificarValor)
                {
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.ValorTotalModificado)
                    </th>
                }
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">
                    @Html.DisplayFor(modelItem => item.Contador)
                </th>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => item.TipoVehiculo)
                </td>
                <td class="text-uppercase">
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraIngreso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TiempoTranscurrido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorTotal)
                </td>
                @if (item.ModificarValor)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.ValorTotalModificado)
                    </td>
                }
                @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_Doc }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_Doc }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Doc })
        </td>*@
            </tr>
            }
        </tbody>

    </table>
</div>

