@model WebParqueadero.ModelViews.IngresoVehiculoView
    @{
        ViewBag.Title = "Home Page";
    }

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12 container my-2">
                <div class="row">
                    <div class="col-sm-2">
                        <button type="button" class="btn btn-sm btn-dark">
                            Total Vehiculos <span class="badge badge-light">@Model.Documento.Count</span>
                        </button>
                    </div>
                    <div class="col-md-1 offset-md-9" title="Ingresar Vehiculo">
                        <button type="submit" class="btn btn-lg btn-outline-dark rounded-circle" data-backdrop="static" data-toggle="modal" data-target="#IngresoVehiculo">
                            <i class="fas fa-edit"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    @foreach (var item in Model.Documento.OrderBy(t => t.FechaCreacion_Doc.Hour).OrderBy(t => t.FechaCreacion_Doc.Minute).ToList())
                    {
                        <div class="img-thumbnail col-sm-3 my-1 text-secondary" style="border:2px solid #808080; border-radius:5px">
                            <div class="row">
                                <div class="col-sm-12" >
                                    <img src="@string.Format("/Imagenes/{0}.svg", item.Vehiculo.TipoVehiculo.CaracterImagen_TVeh)" alt="Error al cargar la imagen" class="col-sm-12" style="height:200px;color:burlywood" />
                                    <div>

                                    </div>
                                </div>
                                <div class="caption col-sm-12">
                                    <div class="row  bg-secondary">
                                        <div class="col-md-8"><h5 class="text-white text-left"><i class="far fa-credit-card"></i> PLACA :</h5></div>
                                        <div class="col-md-4"><h5 class="text-white text-right">@item.Vehiculo.Placa_Veh.ToUpper()</h5></div>
                                    </div>
                                    <div class="row  bg-secondary">
                                        <div class="col-md-8"><h5 class="text-white text-left"><i class="fas fa-hourglass-start"></i> LLEGADA : </h5></div>
                                        <div class="col-md-4"><h5 class="text-white text-right">@item.DetalleDocumento.FirstOrDefault().Horas_DDoc.ToString("hh:mm")</h5></div>
                                    </div>
                                    <div class="row  bg-secondary">
                                        <div class="col-md-8"><h5 class="text-white text-left"><i class="fas fa-hourglass-end"></i> TRANSCURRIDO : </h5></div>
                                        <div class="col-md-4"><h5 class="text-white text-right">@string.Format("{0}:{1}", DateTime.Now.Subtract(item.DetalleDocumento.FirstOrDefault().Horas_DDoc).Hours.ToString("D2"), DateTime.Now.Subtract(item.DetalleDocumento.FirstOrDefault().Horas_DDoc).Minutes.ToString("D2"))</h5></div>
                                    </div>
                                    <div class="row  bg-secondary">
                                        <div class="col-md-8"><h5 class="text-white text-left"><i class="fas fa-dollar-sign"></i> Valor : </h5></div>
                                        @{
                                            decimal x = Model.Parqueadero.FirstOrDefault().Valor_Parq / Model.Parqueadero.FirstOrDefault().PagoMinutos_Parq;
                                            x = x * Convert.ToDecimal(DateTime.Now.Subtract(item.DetalleDocumento.FirstOrDefault().Horas_DDoc).TotalMinutes);
                                        }
                                        <div class="col-md-4"><h5 class="text-white text-right">@Convert.ToInt32(x)</h5></div>
                                    </div>
                                    <div class="row text-center">
                                        <button type="submit" id="BotonPost" class="btn btn-outline-secondary btn-block">
                                            <i class="fas fa-address-card"></i>
                                            FACTURAR
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        @using (Html.BeginForm("IngresarVehiculos", "Home", new { p = Model.Parqueadero.FirstOrDefault().Id_Parq},FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="modal fade" id="IngresoVehiculo" tabindex="-1" role="dialog" aria-labelledby="IngresoVehiculoLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="IngresoVehiculoLabel">INGRESO DE VEHICULO</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="col-sm-12 col-lg-12 my-lg-2">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-horizontal">
                                            <div class="form-group">
                                                <div class="col-lg-12">
                                                    @Html.LabelFor(model => model.Vehiculo.Placa_Veh, htmlAttributes: new { @class = "control-label col-sm-12", style = "", title = "Ingrese placa" })
                                                </div>
                                                <div class="input-group col-lg-12">
                                                    <div class="input-group-prepend">
                                                        <span class="input-group-text" id="inputGroupPrepend">
                                                            <i class="far fa-credit-card"></i>
                                                        </span>
                                                    </div>
                                                    @Html.EditorFor(model => model.Vehiculo.Placa_Veh, new { htmlAttributes = new { @class = "form-control col-sm-12", placeholder = "Ingrese placa", title = "Ingrese placa" } })
                                                    @Html.ValidationMessageFor(model => model.Vehiculo.Placa_Veh, "", new { @class = "text-danger col-sm-12" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        @foreach (var item in Model.TipoVehiculos.OrderBy(t => t.Nombre_TVeh).ToList())
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="TipoVehiculosView" id="@string.Format("id{0}",item.Nombre_TVeh)" value="@item.Id_TVeh">
                                                <label class="form-check-label" for="@string.Format("for{0}",item.Nombre_TVeh)">@item.Nombre_TVeh</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-lg btn-outline-danger" data-dismiss="modal">
                                <i class="fas fa-times"></i>
                                Cancelar
                            </button>
                            <button type="submit" class="btn btn-lg btn-outline-secondary">
                                <i class="fas fa-file-download"></i>
                                Ingresar Vehiculo
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>