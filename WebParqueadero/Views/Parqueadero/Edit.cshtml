@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>

        var MensajeError = `@Html.ValidationSummary(true,"", new { @class = "text-danger" })`;
        if (MensajeError != "") {
            $("#idShowMensajeError").addClass("show");
            $("#IdMensajeError").html(MensajeError);
        } else {
            //$('#idShowMensajeError').alert('close');
            $('#idShowMensajeError').hide();
        }

        $("#idConfiguracionNav").addClass("active");
        var impresora = $("#ltsImpresoras").val();

        if (impresora === 'Seleccionar impresora') {
            $("#ltsImpresoras").scrollTop($("#ltsImpresoras").scrollTop());
        }

        var Valor = parseInt($("#Valor_Parq").val());
        $("#Valor_Parq").val(Valor);

        $("#idDivBuscarPlaca").hide();
    </script>
