                    <div class="col-sm-12 col-md-12">
                        @Html.LabelFor(model => model.Casillero_TVeh, htmlAttributes: new { @class = "control-label col-sm-12", style = "", title = "Modificar valor del parqueadero ?" })
                    </div>
                    <div class="input-group col-sm-12 col-md-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">
                                <i class="fas fa-money-check-alt"></i>
                            </span>
                        </div>
                        @Html.EditorFor(model => model.Casillero_TVeh, new { htmlAttributes = new { @class = "form-control col-sm-12" } })
                        @Html.ValidationMessageFor(model => model.Casillero_TVeh, "", new { @class = "text-danger col-sm-12" })
                    </div>
                </div>

                <div class="form-group  col-sm-9" id="idValorCasillero">
                    <div class="col-sm-12 col-md-12">
                        @Html.LabelFor(model => model.ValorCasillero_TVeh, htmlAttributes: new { @class = "control-label col-md-12" })
                    </div>
                    <div class="input-group col-sm-12 col-md-12">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="inputGroupPrepend">
                                <i class="fas fa-dollar-sign"></i>
                            </span>
                        </div>
                        @Html.EditorFor(model => model.ValorCasillero_TVeh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ValorCasillero_TVeh, "", new { @class = "text-danger" })
